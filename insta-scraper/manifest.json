{
  "manifest_version": 3,
  "name": "Instagram Comment Scraper",
  "version": "1.0",
  "description": "Scrape Instagram comments as XLSX.",
  "permissions": ["tabs"],
  "host_permissions": ["https://www.instagram.com/*"],
  "action": {
    "default_popup": "popup/popup.html"
  },
  "content_scripts": [
    {
      "matches": ["https://www.instagram.com/p/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}
